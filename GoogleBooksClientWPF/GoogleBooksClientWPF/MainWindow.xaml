<Window x:Class="GoogleBooksClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleBooksClientWPF"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600"
        Width="400">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <Label DockPanel.Dock="Left">Title</Label>
                <Button Click="SearchAsync" DockPanel.Dock="Right">Search</Button>
                <TextBox Name="searchTb" Text="Bier" />
            </DockPanel>
            <DataGrid Name="myGrid" />
        </DockPanel>
    </Grid>
</Window>
