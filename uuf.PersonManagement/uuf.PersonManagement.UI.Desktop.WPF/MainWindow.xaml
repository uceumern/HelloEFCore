<Window x:Class="uuf.PersonManagement.UI.Desktop.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uuf.PersonManagement.UI.Desktop.WPF"
        xmlns:views="clr-namespace:uuf.PersonManagement.UI.Desktop.WPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom" Background="HotPink" Height="22"/>
        <TabControl>
            <TabItem Header="Employee">
                <views:EmployeeView />
            </TabItem>
            <TabItem Header="Customer">
                <views:CustomerView />
            </TabItem>
            <TabItem Header="Department">
                <views:DepartmentView />
            </TabItem>            
        </TabControl>
    </DockPanel>
</Window>
